message testNow()


actor Tester() {
  
  receive = {
    | testNow() => {
        println(factorial(5));
    }
  }
}

def factorial(int: n) => int = {
  if (n == 0) {
    return 1;
  } else {
    return (n * factorial(n - 1)); 
  } 
}

def main() => unit = {
  actor<Tester> recursionTester = spawn actor<Tester>();
  message<testNow>() |> recursionTester;
}