message testNow()


actor Tester() {
  mut char c = 'a';

  receive = {
    | testNow() => {
        Println(c);
        c = 'b';
        Println(c);
      }
    | die() => {
      }
  }
}

def main() => unit = {
  actor<Tester> charTester = spawn actor<Tester>();
  message<testNow>() |> charTester;
  message<die>() |> charTester;
}
