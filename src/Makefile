TARFILES = Makefile scanner.mll parser.mly ast.mli oscar.ml

OBJS = parser.cmo scanner.cmo oscar.cmo

oscar : $(OBJS)
	ocamlc -o oscar $(OBJS)

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

oscarulator.tar.gz : $(TARFILES)
	cd .. && tar zcf oscarulator/oscarulator.tar.gz $(TARFILES:%=oscarulator/%)

.PHONY : clean
clean :
	rm -f oscar parser.ml parser.mli scanner.ml *.cmo *.cmi

# Generated by ocamldep *.ml *.mli
oscar.cmo: scanner.cmo parser.cmi ast.cmi
oscar.cmx: scanner.cmx parser.cmx ast.cmi
parser.cmo: ast.cmi parser.cmi
parser.cmx: ast.cmi parser.cmi
scanner.cmo: parser.cmi
scanner.cmx: parser.cmx
parser.cmi: ast.cmi
